{
  "version": 2,
  "builds": [
    {
      "src": "backend/app.py", 
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb" 
      }
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static-build" 
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)", 
      "dest": "backend/app.py" 
    }
  ],
  "installCommand": "pip install -r requirements.txt && npm install" 
}